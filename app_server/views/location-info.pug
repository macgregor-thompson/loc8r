                            | &nbsp;
                .col-12.col-md-6.location-map
                    .card.card-primary
                        .card-block
                            h2.card-title Location Map
                                img.img-fluid.rounded(src='http://maps.googleapis.com/maps/api/staticmap?center=51.455041,-0.9690884&zoom=17&size=400x350&sensor=false&markers=51.455041,-0.9690884&scale=2')
            .row
                .col-12
                    .card.card-primary.review-card
                        .card-block
                            a.btn.btn-primary.float-right(href='/location/review/new') Add review
                            h2.card-title Customer reviews
                            .row.review
                                .col-12.no-gutters.review-header
                                    span.rating
                                        i.fas.fa-star
                                        i.fas.fa-star
                                        i.fas.fa-star
